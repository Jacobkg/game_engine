<%= link_to "New Game", reset_games_path, method: :delete %>
<%= simple_format(@board.display_string) %>

Score:<br>
X: <%= @board.x_score %><br>
Y: <%= @board.y_score %><br>
<br>
<% if @board.x_score >= 11 %>
  X Wins!
<% elsif @board.y_score >= 11 %>
  Y Wins!
<% else %>
  <%= @board.player_to_move %> to move:<br>
  (You can use arrow keys)<br>
  <%= link_to "left", move_games_path(direction: "left"), method: :put, id: "move-left" %>
  <%= link_to "right", move_games_path(direction: "right"), method: :put, id: "move-right" %>
  <%= link_to "up", move_games_path(direction: "up"), method: :put, id: "move-up" %>
  <%= link_to "down", move_games_path(direction: "down"), method: :put, id: "move-down" %>
<% end %>